<div class="card shadow">
  <h5 class="card-header">
    Chi Tiết Bài Viết
  </h5>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid productId. <a href="/" class="alert-link">Go home</a>.
    </div>
    {{else}}
    {{#with this.product}}
    <div class="card border-0">
      <img src="/imgs/sp/{{ProID}}/main.jpg" alt="{{ProName}}" class="card-img-top">
      <div class="card-body">
        <h2 class="card-title">{{ProName}}</h2>
          <p style="color:steelblue"  > Chuyên mục <a href="/categories/{{CatID}}/products">{{CatID}}</a> </p>
        <p class="card-text">Ngày đăng: {{date}}</p>
        <p class="card-text">
          {{{FullDes}}}
        </p>
        <p class="card-text" >Tag:<a   href="#">{{Tag}} </a></p>
        
        
      </div>
    </div>
    {{/with}}
    {{/if}}
  </div>
</div>